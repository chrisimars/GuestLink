<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="guestlink.kodakalaris.com.guestlink.sysSetup">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idLength"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_above="@+id/spinGuestIDLength"
        android:layout_alignStart="@+id/spinGuestIDLength" />

    <Spinner
        android:id="@+id/spinGuestIDLength"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:background="@color/white"
        android:entries="@array/guestidlengths"
        android:popupBackground="@color/white"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/checklup"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="415dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp"
        android:background="@drawable/exitup"
        android:elevation="0dp"
        android:onClick="cancel"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="415dp" />

    <CheckBox
        android:id="@+id/chkWireless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="38dp"
        android:backgroundTint="@color/white"
        android:text="@string/useWireless"
        android:textColor="@color/white"
        android:textSize="20sp"
        style="@style/my_checkbox_style"/>


</android.widget.RelativeLayout>
