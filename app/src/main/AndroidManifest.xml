            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
            <activity
                android:name=".LinkCamera"
                android:label="Link Camera" />

            <activity
                android:name=".setup"
                android:label="GuestLink Setup"
                android:windowSoftInputMode="adjustNothing" />

            <activity
                android:name=".password"
                android:label="Password" />

            <activity
                android:name=".sysSetup"
                android:label="@string/title_activity_system_settings"
                android:windowSoftInputMode="adjustNothing" />

            <activity
                android:name=".getSubjects"
                android:label="Select Subjects"/>



